@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Restaurants</h1>

<div class="container">
  @if (@Model.Count ==0 )
  {
    <h3>No items have been added yet!</h3>
  }
  <table>
  <tr>
  <th>Restaurant</th>
  <th>Cuisine Type</th>
  </tr>
  @foreach (Restaurant restaurant in Model)
  {
    <tr>
      <td>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId})</td>
      <td>@restaurant.Cuisine.Type</td>
    </tr>
  }
  </table>
  <!-- <p class="btn btn-primary">@Html.ActionLink("Add new restaurant", "Create")</p> -->
  @using (Html.BeginForm("Create", "Restaurants", FormMethod.Get))
{
  <input type="submit" value="Add new restaurant" class="btn btn-success">
}
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

